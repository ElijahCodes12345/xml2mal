    <link rel="stylesheet" href="style.css">
    <title>XML to MAL Converter</title>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h1>XML to MAL Converter</h1>
            <form id="upload-form" action="/convert" method="POST" enctype="multipart/form-data">
                <div class="form-group-container">
                    <div class="form-group">
                        <label for="file">Upload Your XML File:</label>
                        <input type="file" name="file" id="file" required>
                    </div>

                    <div class="form-group">
                        <label for="username">Enter Your Mal (myanimelist) Username:</label>
                        <input type="text" name="username" id="username" placeholder="Your Username" required>
                    </div>
                </div>
                <button type="submit" id="convert-btn">Convert</button>
            </form>
            <% if (outputXML) { %>
                <details id="output-xml">
                    <summary>Output XML:</summary>
                    <code>
                        <pre><%= outputXML ? outputXML : '' %></pre>
                        <div class="xml-btn-container">
                            <button id="drag-btn" class="hidden" title="Drag"><i class="fa-solid fa-grip-lines"></i></button>
                            <form action="/download" method="POST" title="Download"> 
                                <input type="hidden" name="outputXML" value="<%= outputXML %>">
                                <button id="download-btn" type="submit"><i class="fa-solid fa-download"></i></button>
                            </form>
                            <button id="copy-btn" title="Copy"><i class="fa-solid fa-copy"></i></button>
                            <button id="enlarge-btn" title="Enlarge"><i class="fa-solid fa-up-right-and-down-left-from-center"></i></button>
                        </div>
                    </code>
                </details>
                <% } %>
